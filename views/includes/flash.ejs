<style>

    .flash-alert{
margin-top: 10rem;
    }
    .alert{
     margin-left:25%;
    }
    @media only screen and (max-width:800px) {
        .alert{
            margin-left:0;
        }
    }
</style>
<div class="flash-alert">
<%if(success && success.length){%>
    <div class="alert alert-success alert-dismissible fade show sm-col-12 col-md-6  mt-2" role="alert">
        <%=success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <%}%>
</div>
<div class="flash-alert">
    <%if(error && error.length){%>
        <div class="alert alert-danger alert-dismissible fade show sm-col-12 col-md-6  mt-2" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <%}%>
    </div>