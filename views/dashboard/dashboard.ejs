<%- include("../includes/sidebar.ejs") %>


  <style>
    body {
      background-color: #1C1C1C;
      display: flex;
      flex-direction: column;
      align-items: center;

    }

    .search-group {
      display: flex;
      line-height: 28px;
      align-items: center;
      position: relative;
      top: 25px;
      left: 100px;
      width: 500px;
    }

    .search-button {

      border-radius: 20px;
      height: 60px;
      background-color: blue;
      color: white;
      border: none;
      padding: 10px;
      cursor: pointer;
    }

    .input {
      font-size: 1.5rem;
      width: 100%;
      height: 60px;
      line-height: 28px;
      padding: 0 1rem;
      padding-left: 2.9rem;
      border: 2px solid #f17945;
      border-radius: 8px;
      outline: none;
      background-color: #f3f3f4;
      color: #0d0c22;
      transition: .3s ease;

    }

    .input::placeholder {
      font-size: 1.5rem;
      color: #9e9ea7;
      position: relative;
      top: 2px;
    }

    .input:focus,
    input:hover {
      outline: none;
      border-color: #f17945(234, 76, 137, 0.4);
      background-color: #fff;
      box-shadow: 0 0 0 4px #f17945(234 76 137 / 10%);
    }

    .icon {
      position: absolute;
      left: 1rem;
      fill: #9e9ea7;
      width: 1.5rem;
      height: 1.5rem;
    }

    .blog-posts-container {
      font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
      margin-left: 16rem;
      /* padding: 25px; */
      flex-direction: column;
      flex-wrap: wrap;
      gap: 20px;
      align-items: flex-start;
      margin-top: 3%;
      height: 100%;
      width: 80vw;
      background-color: #1C1C1C;
      color: white;
    }

    .blog-posts-container .blog-post {
      height: 20rem;
      display: flex;
      transition: transform 0.3s ease;

    }

    .blog-post-link {
      text-decoration: none;
      color: inherit;
      padding: 1rem;
      margin-bottom: 3rem;
    }

    .blog-post:hover {
      transform: scale(1.01);
    }

    .blog-post .blog-post-img {
      width: 30%;
      height: inherit;
    }

    .blog-post-img img {
      width: 100%;
      height: 100%;
      border-top-left-radius: 20px;
      border-bottom-left-radius: 20px;
    }

    .blog-post .blog-post-content {
      padding: 10px;
      padding-left: 20px;
      width: 70%;
      display: flex;
      flex-direction: column;
      /* padding: 10px; */
      gap: 15px;
      background-color: #393939;
    }

    .user-detail {
      display: inline-flex;
      justify-content: flex-start;
      align-items: center;
      gap: 12px;
    }

    .user-detail .user-profile-img {
      width: 20px;
      height: 20px;
      object-fit: cover;
      border-radius: 50%;
    }

    .blog-post-content .destination img {
      width: 16px;
      height: 16px;
    }

    .blog-post-content .destination {
      font-size: 1.5rem;
    }

    .blog-post-content .country,
    .budget,
    .exp {
      font-size: 1.1rem;
    }

    .blog-post-content .upload-time {
      position: relative;
    }

    .blog-post-content .upload-time img {
      position: relative;
      top: 3px;
    }

    .blog-post-content>.exp {
      /* display: flex;
      flex-wrap: wrap; */
      text-wrap: wrap;
    }
  </style>

  <div class="search-group">
    <input placeholder="Search" type="search" class="input">

    <svg class="icon" aria-hidden="true" viewBox="0 0 24 24">
      <g>
        <path
          d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z">
        </path>
      </g>
    </svg>
    <button class="search-button">Search</button>
  </div>



  <div class="blog-posts-container">
    <% for(let blog of allBlog){%>
      <a href="/dashboard/<%=blog._id%>" class="blog-post-link">
        <div class="blog-post">
          <div class="blog-post-img">
            <img src="<%=blog.images[0].url%>" alt="">
          </div>
          <div class="blog-post-content">

            <div class="user-detail">
              <img class="user-profile-img" src="/assets/blog.png" alt="">
              <div class="username">
                <%=blog.owner.username%>
              </div>
            </div>
            <div class="destination">
              <b>
                <%= blog.destination %>
              </b>
            </div>
            <div class="country">
              <b><i class="fa-solid fa-location-dot"></i> Country :</b>
              <%=blog.country%>
            </div>
            <div class="budget">
              <b><i class="fa-solid fa-money-check-dollar"></i> Budget :</b>
              Rs. <%=blog.budget.toLocaleString('en-IN')%>
            </div>
            <div class="exp">
              <b><i class="fa-solid fa-suitcase-rolling"></i> Experience :</b>
              <%= blog.experience.substring(0, 195) %>
            </div>
            <div class="upload-time">
              <i class="fa-solid fa-clock-rotate-left"></i>
              <%= new Date(blog.dateUploaded).toLocaleString() %>
            </div>
          </div>
        </div>
      </a>

      <%}%>

  </div>