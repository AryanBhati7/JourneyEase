<%- include("../includes/sidebar.ejs") %>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #262626;
            color: #fff;
            display: flex;
            flex-direction: row-reverse;
            justify-content: space-between;
        }

        #contact {
            width: calc(100% - 22rem);
            max-width: 1200px;
            margin-left: 22rem;
            padding: 20px;
            flex-grow: 1;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .left {
            flex-basis: 35%;
            margin-right: 5%;
        }

        .right {
            flex-basis: 60%;
        }

        .left p,
        .left h1 {
            color: #fff;
        }

        .left p i,
        .left h1 i {
            color: #e48845;
            margin-right: 15px;
            font-size: 25px;
        }

        .social-icons {
            margin-top: 30px;
        }

        .social-icons a {
            text-decoration: none;
            font-size: 30px;
            margin-right: 15px;
            color: #ababab;
            display: inline-block;
            transition: transform 0.5s;
        }

        .social-icons a:hover {
            color: #e47c31;
            transform: translateY(-5px);
        }

        .btn.btn2 {
            display: inline-block;
            background: #e48845;
            color: #fff;
            text-decoration: none;
            padding: 10px 20px;
            margin-top: 20px;
            border-radius: 5px;
            transition: background 0.5s;
        }

        .btn.btn2:hover {
            background: #e48845;
        }

        .right form {
            width: 100%;
        }

        form input,
        form textarea {
            width: 100%;
            border: 0;
            outline: none;
            background: #333;
            padding: 15px;
            margin: 15px 0;
            color: #fff;
            font-size: 18px;
            border-radius: 6px;
        }

        form .btn2 {
            padding: 14px 60px;
            font-size: 18px;
            margin-top: 20px;
            cursor: pointer;
        }

        .copyright {
            width: 100%;
            text-align: center;
            padding: 25px;
            /* background: #333; */
            font-weight: 300;
            margin-top: 20px;
            color: #fff;
        }

        .copyright i {
            color: #e48845;
        }

        #msg {
            color: #61b752;
            margin-top: 1px;
            display: block;
        }

        #warn {
            color: #61b752;
            margin-top: 18px;
            display: block;
        }

        @media (max-width: 768px) {
            #contact {
                width: 100%;
                margin-left: 0;
            }

            .container {
                flex-direction: column;
            }

            .left,
            .right {
                flex-basis: 100%;
            }

            .left {
                margin-top: 43px;
                margin-right: 0;
            }
        }
    </style>
    <script src="https://kit.fontawesome.com/637810c134.js" crossorigin="anonymous"></script>
    <div id="contact">
        <div class="container">
            <div class="row">
                <div class="left">
                    <h1 class="sub-title">Contact us</h1>
                    <p><i class="fa-regular fa-envelope"></i>sagespeak008@cyberdude.com</p>
                    <p><i class="fa-solid fa-phone"></i>+91 9394551205, +91 9863646492</p>
                    <div class="social-icons">
                        <a href="https://instagram.com/_arnab.jk_008" target="_blank"><i
                                class="fa-brands fa-instagram"></i></a>
                        <a href="https://github.com/xensen008" target="_blank"> <i class="fa-brands fa-github"></i></a>
                        <a href="https://www.linkedin.com/in/arnabjk008/" target="_blank"><i
                                class="fa-brands fa-linkedin"></i></a>
                        <a href="https://twitter.com/Arnabjk008" target="_blank"><i
                                class="fa-brands fa-twitter"></i></a>
                        <a href="https://bio.link/xensen008" target="_blank"><i class="fa-solid fa-link"></i></a>
                    </div>
                </div>
                <div class="right">
                    <form name="submit-to-google-sheet">
                        <input type="text" name="Name" placeholder="your name*" required>
                        <input type="email" name="email" placeholder="your Email*" required>
                        <input type="tel" name="phone" pattern="[0-9]{10}"
                            placeholder="Please enter a 10-digit phone number" maxlength="10">
                        <textarea name="Message" rows="6" placeholder="Your message*" required></textarea>
                        <button type="submit" class="btn btn2">Submit</button>
                    </form>
                    <span id="msg"></span>
                    <span id="warn">pls wait for few sec after clicking the submit btn!</span>
                </div>
            </div>
        </div>
        <div class="copyright">
            <p>Copyright <i class="fa-regular fa-copyright"></i> Devbrigades Made with <i class="fa-solid fa-heart"></i>
                by Devbrigades</p>
        </div>
    </div>

    <script>
        const scriptURL = 'https://script.google.com/macros/s/AKfycbzr5gRVe6Ot0wOakDEqYKE2W2DK9B_rCjr42mrK0UTlYi8f1XAOwAHwwPlDPMBWKGPj/exec'
        const form = document.forms['submit-to-google-sheet']
        const msg = document.getElementById("msg")
        form.addEventListener('submit', e => {
            e.preventDefault()
            fetch(scriptURL, { method: 'POST', body: new FormData(form) })
                .then(response => {
                    msg.innerHTML = "Message sent succesfully!"
                    setTimeout(function () {
                        msg.innerHTML = " "
                    }, 5000)
                    form.reset()
                })
                .catch(error => console.error('Error!', error.message))
        })
    </script>