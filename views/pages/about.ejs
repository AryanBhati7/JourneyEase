<% layout('/layouts/boilerplate.ejs') -%>
    <style>
        .home-container {
            width: 100vw;
            display: flex;
            flex-direction: column;
            /* justify-content: center; */
            align-items: center;
            /* background-color: #f8f9fa; */
        }

        .aboutus-container {
            padding-top: 250px;
            height: 702px;
            width: 100vw;
            display: flex;
            align-items: center;
            justify-content: center;
            background-image: url(/assets/about-hero.jpg);
            background-size: cover;
            background-repeat: no-repeat;
        }

        .aboutus-container::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100vw;
            height: 43.9rem;
            background: rgba(0, 0, 0, 0.7);
        }

        .aboutus-text {
            margin-bottom: 23%;
        }

        .aboutus-text h1 {
            font-family: "Volkhov", "DM Serif Display", cursive;
            font-weight: 700;
            color: #fff;
            margin-bottom: 5px;
            margin-left: 90px;
            position: relative;
            font-size: 5rem;
            z-index: 1;
        }

        .aboutus-text p {
            position: absolute;
            right: 10rem;
            left: 10rem;
            color: #fff;
            z-index: 100;
            font-size: 1.2rem;
            font-family: Poppins, Rubik, "Open Sans", -apple-system, BlinkMacSystemFont,
                "Segoe UI", "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji",
                "Segoe UI Emoji", "Segoe UI Symbol";
        }

        .find-more-btn {
            margin-top: 20px;
            position: absolute;
            top: 5rem;
            right: 28rem;
            z-index: 100;
            font-size: 1.2rem;
            font-family: Poppins, Rubik, "Open Sans", -apple-system, BlinkMacSystemFont,
                "Segoe UI", "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji",
                "Segoe UI Emoji", "Segoe UI Symbol";
            /* font-family: 'NotoSansGujarati'; */
            height: 50px;
            width: 180px;
            border-radius: 5px;
            border: none;
            background-color: #fd4d21;
            color: white;
            box-shadow: 0 1.25rem 2.1875rem 0 rgba(241, 165, 1, 0.15);
            margin-left: 150px;
        }

        .find-more-btn:hover {
            background-color: #f17945;
            color: white;
        }

        .faq {
            height: 50vw;
            color: black;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 5% 8%;
            width: 100vw;
            background-size: cover;
            background-position: center;
        }

        .faq-left {
            position: relative;
            right: 55px;
            width: 35%;
            height: 50rem;
        }

        .faq-left img {
            position: absolute;
            top: 0;
            left: 50px;
        }

        .faq-right {
            position: relative;
            bottom: 4rem;
            width: 70%;
            /* padding: 2rem; */
        }

        .faq-title {
            font-size: 5rem;
            color: white;
            font-family: Poppins, Rubik, "Open Sans", -apple-system, BlinkMacSystemFont,
                "Segoe UI", "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji",
                "Segoe UI Emoji", "Segoe UI Symbol";
        }

        .faq-question {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #fff;
            padding: 1rem;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            margin: 10px auto;
            position: relative;
            z-index: 1;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .faq-question:hover {
            background-color: #f8f8f8;
        }

        .faq-question h2 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            flex-grow: 1;
            line-height: 1.5;
        }

        .faq-question i {
            font-size: 2rem;
            font-weight: bold;
        }

        .faq-answer {
            overflow: auto;
            line-height: 1.5;
            padding: 1rem 2rem;
            transition: max-height 0.3s ease, padding 0.3s ease;
            background-color: #fff4f4;
            display: none;
            padding: 1rem;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            width: 80%;
            position: relative;
            z-index: 2;
            width: 100%;
            left: 0;
            right: 0;
            overflow: hidden;
            transition: transform 0.5s ease;
            transform: scaleY(0);
            transform-origin: top;
        }

        .faq-answer.open {
            max-height: 500px;
            transform: scaleY(1);
            display: block;
        }

        .faq-answer p {
            font-size: 1.2rem;
            line-height: 1.6;
            margin: 0;
        }

        .toggle {
            transition: transform 0.3s ease;
        }

        .toggle.open {
            transform: rotate(45deg);
        }

        .our-team {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            width: 100vw;
            height: auto;
            padding: 2rem 0;
        }

        .our-team .our-team-title {
            width: 100vw;
            display: flex;
            justify-content: center;
            color: white;
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .our-team .team-members {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            gap: 10rem;
        }

        .team-members .member {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 200px;
            box-shadow: 0 2rem 2.1875rem 0 rgb(253, 77, 33, 0.1);
            transition: transform 0.3s ease-in-out;
        }

        .team-members .member:hover {
            transform: scale(1.05);
        }

        .team-members img {
            border-radius: 50%;
            height: 150px;
            width: 150px;
        }

        .team-members .member-name {
            text-align: center;
            color: #f17945;
            font-size: 1.2rem;
            margin-top: 1rem;
        }

        @media (max-width: 768px) {
            .our-team .team-members {
                flex-direction: column;
            }
        }

        @media (max-width: 768px) {
            .aboutus-section {
                width: 100vw;
            }

            .home-container {
                flex-direction: column;
                align-items: flex-start;
            }

            .aboutus-container {
                padding-top: 150px;
                height: 30rem;
                margin-bottom: 5rem;
            }

            .aboutus-container::before {
                height: 30rem;
            }

            .aboutus-text {
                text-align: center;
                position: relative;
                bottom: 5rem;
                top: 2rem;
                width: 80%;
            }

            .aboutus-text h1 {
                font-size: 2rem;
                margin-left: 0;
            }


            .aboutus-text p {
                font-size: 1rem;
                position: static;
            }

            .find-more-btn {
                margin-left: 0px;
                width: 150px;
                height: 40px;
                font-size: 1rem;
            }

            .faq {
                flex-direction: column;
                height: auto;
            }

            .faq-left,
            .faq-right {
                width: 100%;
            }

            .faq-left {
                display: none;
            }

            .faq-title {
                font-size: 3rem;
            }

            .faq-question h2 {
                font-size: 1.2rem;
            }

            .our-team .our-team-title {
                font-size: 1.5rem;
            }

            .our-team .team-members {
                flex-direction: column;
                gap: 2rem;
            }

            .team-members .member {
                width: 100%;
            }

            .team-members .member-name {
                font-size: 1rem;
            }
        }
    </style>

